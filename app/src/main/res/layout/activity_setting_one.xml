<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/lin_start"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/head"></include>

    <com.water.project.view.FontTextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_head"
        android:layout_marginTop="190dp"
        android:layout_centerHorizontal="true"
        android:text="中科光大初版"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="#D0D0D0"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/lin_head">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="测试编码"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>
                
                
                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:text="123456789000"
                    android:textSize="15sp"
                    android:textColor="@color/color_1fc37f"
                    android:inputType="phone"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="测试名称"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:text="北京市昌平区"
                    android:textSize="15sp"
                    android:textColor="@color/color_1fc37f"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="经纬度"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:text="136.125,40.569"
                    android:textSize="15sp"
                    android:textColor="@color/color_1fc37f"
                    android:inputType="phone"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地面标离"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:text="10米"
                    android:textSize="15sp"
                    android:textColor="@color/color_1fc37f"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="孔口标离"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:text="10米"
                    android:textSize="15sp"
                    android:textColor="@color/color_1fc37f"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="监测井类型"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <CheckBox
                        android:id="@+id/checkbox_prepare_1"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="新建"
                        android:textColor="@color/color_1fc37f"
                        android:textSize="13sp" />

                    <CheckBox
                        android:id="@+id/checkbox_prepare_2"
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="改建"
                        android:textColor="@color/color_1fc37f"
                        android:textSize="13sp" />


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="地下水类型"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <CheckBox
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="潜水"
                        android:textColor="@color/color_1fc37f"
                        android:textSize="13sp" />

                    <CheckBox
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="取水"
                        android:textColor="@color/color_1fc37f"
                        android:textSize="13sp" />


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="井深"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />


                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:text="100米"
                    android:textSize="15sp"
                    android:textColor="@color/color_1fc37f"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="井管材料"
                    android:textSize="17sp"
                    android:textColor="#333333"
                    android:gravity="center"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center">

                    <CheckBox
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="钢管"
                        android:textColor="@color/color_1fc37f"
                        android:textSize="13sp" />

                    <CheckBox
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="水泥管"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="13sp" />

                    <CheckBox
                        style="@style/CustomCheckBoxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="PVC"
                        android:textColor="@color/color_1fc37f"
                        android:textSize="13sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_dddddd"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <com.water.project.view.ClickTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="重置"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:background="@drawable/bg_login"/>

                <com.water.project.view.ClickTextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="修改"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:background="@drawable/bg_login"/>

                <com.water.project.view.ClickTextView
                    android:id="@+id/tv_aso_save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="5dp"
                    android:text="保存"
                    android:textSize="17sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:background="@drawable/bg_login"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/tv_aso_jc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="基础信息"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_setting_select"/>

                <TextView
                    android:id="@+id/tv_aso_yq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="仪器信息"
                    android:textSize="16sp"
                    android:textColor="@color/color_1fc37f"
                    android:background="@drawable/bg_setting"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>




