<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="103.5dp"
          android:background="@drawable/bg_select_photo"
          android:layout_marginRight="10dp"
          android:layout_marginLeft="10dp"
          android:orientation="vertical">

          <TextView
              android:id="@+id/tv_btn1"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:text="进入SD卡查找"
              android:textSize="18sp"
              android:textColor="@color/colorPrimary"
              android:gravity="center"/>

          <View
              android:layout_width="match_parent"
              android:layout_height="0.5dp"
              android:background="#F4F5F6"/>

          <TextView
              android:id="@+id/tv_btn2"
              android:layout_width="match_parent"
              android:layout_height="50dp"
              android:text="根据文件名搜索"
              android:textSize="18sp"
              android:textColor="@color/colorPrimary"
              android:gravity="center"/>

      </LinearLayout>

        <TextView
            android:id="@+id/tv_cancle"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/bg_select_photo_two"
            android:layout_marginBottom="10dp"
            android:textColor="@color/colorPrimary"
            android:text="取消"
            android:textSize="18sp"
            android:gravity="center"/>


    </LinearLayout>

</RelativeLayout>
