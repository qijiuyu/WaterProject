<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    android:orientation="vertical">

   <include layout="@layout/head"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_kuang"
                android:layout_margin="10dp"
                android:padding="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="采集时间"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tv_ag_cjTime"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"/>

                <View
                    android:id="@+id/view_ag1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_cjTime"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="水位埋深"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag1"/>

                <TextView
                    android:id="@+id/tv_ag_maishen"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="m"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag1"/>

                <View
                    android:id="@+id/view_ag2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_maishen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="压力值"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag2"/>

                <TextView
                    android:id="@+id/tv_ag_yali"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_below="@id/view_ag2"/>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/view_ag2"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true">

                    <include layout="@layout/unit"/>

                </LinearLayout>

                <View
                    android:id="@+id/view_ag3"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_yali"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="气压值"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag3"/>

                <TextView
                    android:id="@+id/tv_ag_qiya"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="50dp"
                    android:layout_below="@id/view_ag3"/>

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/view_ag3"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_alignParentRight="true">

                    <include layout="@layout/unit"/>

                </LinearLayout>

                <View
                    android:id="@+id/view_ag4"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_qiya"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="水温值"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag4"/>

                <TextView
                    android:id="@+id/tv_ag_shuiwen"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="℃"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag4"/>

                <View
                    android:id="@+id/view_ag5"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_shuiwen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="气温值"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag5"/>

                <TextView
                    android:id="@+id/tv_ag_qiwen"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="℃"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag5"/>

                <View
                    android:id="@+id/view_ag6"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_qiwen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="电池电压值"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag6"/>

                <TextView
                    android:id="@+id/tv_ag_dianya"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="V"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag6"/>

                <View
                    android:id="@+id/view_ag7"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_dianya"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="电导率"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag7"/>

                <TextView
                    android:id="@+id/tv_ag_diandaolv"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:text="μS/cm"
                    android:textColor="@color/color_1fc37f"
                    android:textSize="15sp"
                    android:layout_alignParentRight="true"
                    android:gravity="right|center"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/view_ag7"/>

                <View
                    android:id="@+id/view_ag8"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/color_888888"
                    android:layout_below="@id/tv_ag_diandaolv"/>

                <com.water.project.view.ClickTextView
                    android:id="@+id/tv_get"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/getdata_btn"
                    android:gravity="center"
                    android:layout_below="@id/view_ag8"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
